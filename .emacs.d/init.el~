(defun wrap-markup-region (start end)
  "Insert a markup <b></b> around a region"
  (interactive "r")
  (save-excursion
    (goto-char end) (insert "</b>")
    (goto-char start) (insert "<b>")))

(defun comment-c-region (start end)
  "Comment a c region using /* */"
  (interactive "r")
  (goto-char end)
  (next-line)
  (insert "*/")
  (goto-char start)
  (previous-line)
  (insert "/*"))

